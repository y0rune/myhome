#!/bin/bash
NOTIFY=no
pkill -RTMIN+10 dwmblocks

[ "$1" = "up" ] && ponymix increase 5 > /dev/null   && [ $NOTIFY == "yes" ] && notify-send "ðŸ”Š Volume $(ponymix get-volume)"
[ "$1" = "down" ] && ponymix decrease 5 > /dev/null && [ $NOTIFY == "yes" ] && notify-send "ðŸ”‰ Volume $(ponymix get-volume)"
[ "$1" = "toggle" ] && ponymix toggle> /dev/null    && [ $NOTIFY == "no" ] && notify-send "ðŸ”‡ Volume (un)mute "
