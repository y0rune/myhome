if [ -e /mnt/Synology/Systems ]
then
    echo "Starting $(date)" > ~/.cache/.logSynology
    sudo rsync -r --bwlimit=1024 --update --progress /usr/mega/ /mnt/Synology >> ~/.cache/.logSynology
    echo "Ending $(date)" >> ~/.cache/.logSynology
fi
